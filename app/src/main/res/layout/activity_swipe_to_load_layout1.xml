        android:text="仿饿了吗刷新"
        android:textColor="#FFFFFF"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:onClick="click02"
        android:text="天气刷新"
        android:textColor="#FFFFFF"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
