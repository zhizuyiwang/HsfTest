<?xml version="1.0" encoding="utf-8"?>
<com.hsf.hsftest.image.scrollview.customscrollview.DampView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dv"
    tools:context="com.hsf.hsftest.image.scrollview.activity.ZoomInScrollViewActivity5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:background="@mipmap/my_page_background"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="你好啊"
            android:textSize="30sp"
            android:textColor="@color/accent_color"/>

    </RelativeLayout>
</com.hsf.hsftest.image.scrollview.customscrollview.DampView>
